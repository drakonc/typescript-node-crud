<div class="row mb-5">
    <div class="col-md-4 offset-md-4 text-white text-centertsc">
        <h1 class="font-weight-bold font-italic text-uppercase">Listado de Tareas </h1>
    </div>
</div>
<div class="row">
    {{#if tasks}}
    {{#each tasks}}
    <div class="col col-md-3">
        <div class="card rounded mb-3">
            <div class="card-body">
                <h3 class="font-weight-bold font-italic text-uppercase">{{ titulo }}</h3>
                <p>{{ descripcion }}</p>
            </div>
            <div class="card-footer d-flex justify-content-between aling-items-center">
                <a href="/tasks/delete/{{_id}}" class="btn btn-danger">Eliminar</a>
                <a href="/tasks/edit/{{_id}}" class="btn btn-secondary">Editar</a>
            </div>
        </div>
    </div>
    {{/each}}
    {{else}}
    <div class="col-md-6 offset-md-3">
        <div></div>
        <div class="card rounded border-primary">
            <div class="card-header text-center text-white bg-primary">
                <h2 class="font-weight-bold font-italic text-uppercase">No Hay Tareas Creadas</h2>
                <h3 class="font-weight-bold font-italic text-uppercase">Crear Tarea</h3>
            </div>
            <div class="card-body">
                <form action="/tasks/create" method="POST">
                    <div class="form-group">
                        <label for="titulo" class="font-weight-bold">Tarea</label>
                        <input type="text" id="titulo" name="titulo" placeholder="Escribe tu Titulo"
                            class="form-control rounded" autofocus required>
                    </div>
                    <div class="form-group">
                        <label for="descripcion" class="font-weight-bold">Descripción</label>
                        <input type="text" id="descripcion" name="descripcion" placeholder="Escribe tu Descripción"
                            class="form-control rounded">
                    </div>
                    <button type="submit" class="btn btn-success btn-block">
                        Guargar
                    </button>
                </form>
            </div>
        </div>
    </div>
    {{/if}}
</div>